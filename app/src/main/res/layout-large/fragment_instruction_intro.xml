<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dodgerblue_zero" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/instruction_title_text_size"
        android:text="@string/instruction_four"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/third_instruction_screen_intro"
        android:layout_marginTop="@dimen/margin_end_tv"
        android:layout_below="@+id/second_instruction_screen_intro"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text_size"
        android:text="@string/instruction_intro"
        android:layout_marginTop="@dimen/button_margin_large"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/first_instruction_screen_intro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/instruction_title_text_size"
        android:text="@string/instruction_one"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/second_instruction_screen_intro"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>