<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deansponholz.fish_game.MainActivity"
    android:background="@android:color/background_light">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ocean_large" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.deansponholz.fish_game.HUDFragment"
        tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </fragment>

    <com.example.deansponholz.fish_game.Rectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_rectangle"
        android:layout_marginLeft="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

